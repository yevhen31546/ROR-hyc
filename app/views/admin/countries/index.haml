%h1 Countries

%ul#actions
  %li= link_to 'Add new country', new_object_path, :class => 'add_icon'

= paginated_section collection do
  %table.index
    %tr
      %th Name
      %th Actions
    - @countries.each do |country|
      %tr{:class => cycle('odd', 'even')}
        %td= country.name
        %td(nowrap="nowrap")
          = link_to 'Edit', edit_object_path(country), :class => 'inline_edit_icon'
          = link_to 'Delete', object_path(country), :confirm => 'Are you sure?', :method => :delete, :class => 'inline_delete_icon'
