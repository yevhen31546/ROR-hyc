= semantic_form_for [:admin, @gallery_category] do |f|
  = render 'layouts/error_messages', :target => object
  %ul
    = f.input :name
    = f.input :parent_id, as: :select, collection: GalleryCategory.all_except(@gallery_category)
    = f.input :position
    = f.commit_button (f.object.new_record? ? 'Add category' : 'Edit category')
