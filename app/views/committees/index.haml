- @no_sidebar = true
- @page_name = "Committees"

- content_for :breadcrumbs do
  %li
    = link_to "Members Area", account_path
  %li
    %span= @page_name


%h1= @page_name

%ul#committees_list
  - @committees.each do |committee|
    %li
      %h3= committee.name
      %p= [committee.phone, committee.email].select(&:present?).map {|s| auto_link(s) }.join(' - ').html_safe

-#%p= link_to 'Members Forum', forem.forums_path, :class => 'button', :style => 'line-height: 30px; padding: 5px 10px; '
